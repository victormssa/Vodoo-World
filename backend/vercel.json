{
  "rewrites": [
    { 
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "installCommand": "yarn install --frozen-lockfile",
        "developmentCommand": "yarn start:dev"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ],
  "build": {
    "command": "yarn build"
  }
}
